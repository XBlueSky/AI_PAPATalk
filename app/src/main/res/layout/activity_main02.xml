<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bluesky.ai.Main02Activity"
    android:background="#baf6dac4"
    android:animateLayoutChanges="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Chubby    Boy"
        android:id="@+id/textView11"
        android:textSize="50dp"
        android:textStyle="bold|italic"
        android:textColor="#5b3b3b"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/height"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/age"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/age"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/chubbyboy"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/height"
        android:layout_toRightOf="@+id/age"
        android:layout_toEndOf="@+id/age"
        android:layout_marginTop="211dp"
        android:adjustViewBounds="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="你都怎麼開車或騎車?"
        android:id="@+id/q1"
        android:layout_marginTop="23dp"
        android:textColor="#ef271d1d"
        android:layout_below="@+id/age"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/q1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/a1" >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="以自己獨特的方式開車"
            android:id="@+id/a11"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一板一眼遵照交通規則"
            android:id="@+id/a12"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="謹慎早早煞車"
            android:id="@+id/a13"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="耍酷超車"
            android:id="@+id/a14"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/q1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/a2"
        android:visibility="gone">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="套在吸管上"
            android:id="@+id/a21"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="丟在飲料店"
            android:id="@+id/a22"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="丟在塑膠袋裡"
            android:id="@+id/a23"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不用吸管"
            android:id="@+id/a24"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/q1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/a3"
        android:visibility="gone">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="腳踏車"
            android:id="@+id/a31"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="機車"
            android:id="@+id/a32"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="汽車"
            android:id="@+id/a33"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大眾運輸工具"
            android:id="@+id/a34"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/a4"
        android:layout_below="@+id/q1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="右前方"
            android:id="@+id/a41"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="右後方"
            android:id="@+id/a42"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="左後方"
            android:id="@+id/a43"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自己開車"
            android:id="@+id/a44"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />
    </RadioGroup>
</RelativeLayout>
