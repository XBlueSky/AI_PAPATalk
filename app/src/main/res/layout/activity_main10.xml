<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bluesky.ai.Main10Activity"
    android:background="#baf6dac4"
    android:animateLayoutChanges="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Slim    Girl"
        android:id="@+id/textView12"
        android:textSize="60dp"
        android:textStyle="bold|italic"
        android:textColor="#5b3b3b"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/age"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/height"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/age"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:focusable="true"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/age"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="50dp"
        android:src="@drawable/slimgirl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="平常出門穿著?"
        android:id="@+id/q1"
        android:layout_marginTop="24dp"
        android:textColor="#ef271d1d"
        android:layout_below="@+id/age"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/a1"
        android:layout_below="@+id/q1">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="會化妝打扮光鮮亮麗"
            android:id="@+id/a11"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服裝總是黑灰白三色"
            android:id="@+id/a12"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="穿睡衣出門"
            android:id="@+id/a13"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不穿"
            android:id="@+id/a14"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/a2"
        android:layout_below="@+id/q1"
        android:visibility="gone">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="學別人的笑聲"
            android:id="@+id/a21"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="羞怯的微笑 "
            android:id="@+id/a22"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大聲的狂笑"
            android:id="@+id/a23"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不笑"
            android:id="@+id/a24"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/a3"
        android:visibility="gone"
        android:layout_below="@+id/q1">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="咖啡廳 "
            android:id="@+id/a31"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KTV	"
            android:id="@+id/a32"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="圖書館 "
            android:id="@+id/a33"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游泳池 "
            android:id="@+id/a34"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/a4"
        android:layout_below="@+id/q1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="學生斜背法"
            android:id="@+id/a41"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="貴婦手肘挽包法"
            android:id="@+id/a42"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公事包拿法"
            android:id="@+id/a43"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="別人幫忙拿法"
            android:id="@+id/a44"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />
    </RadioGroup>
</RelativeLayout>
