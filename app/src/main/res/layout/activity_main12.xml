<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bluesky.ai.Main12Activity"
    android:background="#baf6dac4"
    android:animateLayoutChanges="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Chubby    Girl"
        android:id="@+id/textView14"
        android:textSize="50dp"
        android:textStyle="bold|italic"
        android:textColor="#5b3b3b"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/age"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/height"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/age"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/chubbygirl"
        android:layout_toEndOf="@+id/age"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="125dp"
        android:layout_below="@+id/height"
        android:layout_toRightOf="@+id/age" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="喜愛哪種口味的食物?"
        android:id="@+id/q1"
        android:textColor="#ef271d1d"
        android:layout_below="@+id/age"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/a1"
        android:layout_below="@+id/q1">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="甜的"
            android:id="@+id/a11"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="苦的"
            android:id="@+id/a12"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="辣的"
            android:id="@+id/a13"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="酸的"
            android:id="@+id/a14"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/a2"
        android:layout_below="@+id/q1"
        android:visibility="gone">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="咖啡"
            android:id="@+id/a21"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="香草"
            android:id="@+id/a22"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="奇異果"
            android:id="@+id/a23"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="西瓜"
            android:id="@+id/a24"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/a3"
        android:layout_below="@+id/q1"
        android:visibility="gone">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黑襯衫+長褲"
            android:id="@+id/a31"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="露背低胸洋裝"
            android:id="@+id/a32"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="寬鬆長裙"
            android:id="@+id/a33"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玩偶套裝"
            android:id="@+id/a34"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/a4"
        android:layout_below="@+id/q1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="奶茶"
            android:id="@+id/a41"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="豆漿"
            android:id="@+id/a42"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="柚子茶"
            android:id="@+id/a43"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="乳清"
            android:id="@+id/a44"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />
    </RadioGroup>
</RelativeLayout>
