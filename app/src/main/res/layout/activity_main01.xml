<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bluesky.ai.Main01Activity"
    android:background="#baf6dac4"
    android:animateLayoutChanges="true"
    android:id="@+id/container">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/fitboy"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/height"
        android:layout_toRightOf="@+id/age"
        android:layout_toEndOf="@+id/age"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="fit    Boy"
        android:id="@+id/textView10"
        android:textSize="60dp"
        android:textStyle="bold|italic"
        android:textColor="#5b3b3b"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/age"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/height"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/age"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="平常衣服或現在穿著的鬆緊?"
        android:id="@+id/q1"
        android:layout_below="@+id/age"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:textColor="#ef271d1d" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/q1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/a1">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="寬鬆"
            android:id="@+id/a11"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合身 "
            android:id="@+id/a12"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="緊身"
            android:id="@+id/a13"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="沒穿衣服"
            android:id="@+id/a14"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="367dp"
        android:layout_height="345dp"
        android:layout_below="@+id/q1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/a2"
        android:visibility="gone">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="狗"
            android:id="@+id/a21"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="貓"
            android:id="@+id/a22"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="爬蟲類昆蟲"
            android:id="@+id/a23"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="花草"
            android:id="@+id/a24"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="367dp"
        android:layout_height="345dp"
        android:layout_below="@+id/q1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/a3"
        android:visibility="gone">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蘋果"
            android:id="@+id/a31"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="無籽葡萄"
            android:id="@+id/a32"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="榴槤"
            android:id="@+id/a33"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不喜歡吃水果"
            android:id="@+id/a34"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="367dp"
        android:layout_height="345dp"
        android:layout_below="@+id/q1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/a4"
        android:visibility="gone">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="球鞋"
            android:id="@+id/a41"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="潮鞋"
            android:id="@+id/a42"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="皮鞋"
            android:id="@+id/a43"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赤腳"
            android:id="@+id/a44"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />
    </RadioGroup>

</RelativeLayout>
