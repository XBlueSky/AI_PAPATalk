<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bluesky.ai.Main11Activity"
    android:background="#baf6dac4"
    android:animateLayoutChanges="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fit    Girl"
        android:id="@+id/textView13"
        android:textSize="60dp"
        android:textStyle="bold|italic"
        android:textColor="#5b3b3b"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/height"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/age"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/height"
        android:layout_toRightOf="@+id/age"
        android:layout_toEndOf="@+id/age"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/fitgirl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="洗澡順序"
        android:id="@+id/q1"
        android:layout_marginTop="23dp"
        android:textColor="#ef271d1d"
        android:layout_below="@+id/age"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/a1"
        android:layout_below="@+id/q1">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="先洗頭"
            android:id="@+id/a11"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="先洗身體"
            android:id="@+id/a12"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="先洗腳"
            android:id="@+id/a13"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每次都不一樣"
            android:id="@+id/a14"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/a2"
        android:layout_below="@+id/q1"
        android:visibility="gone">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="叉子"
            android:id="@+id/a21"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="筷子"
            android:id="@+id/a22"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="湯匙"
            android:id="@+id/a23"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手"
            android:id="@+id/a24utton12"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/a3"
        android:layout_below="@+id/q1"
        android:visibility="gone">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中、無名、小拇指"
            android:id="@+id/a31"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大拇、食、中指"
            android:id="@+id/a32"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="食、中、無名指"
            android:id="@+id/a33"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大拇、中、小拇指"
            android:id="@+id/a34"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/a4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/q1"
        android:visibility="gone">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="棒球帽"
            android:id="@+id/a41"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="五分割帽"
            android:id="@+id/a42"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全帽"
            android:id="@+id/a43"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="綠帽"
            android:id="@+id/a44"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#ef271d1d" />
    </RadioGroup>
</RelativeLayout>
